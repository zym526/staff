<view class="log_outer">
  <!-- 顶部logo -->
  <view class="log_logo">
    <view class="iconfont icon-ziyuan7" style="font-size:280rpx;color:#1678FF"></view>
  </view> 
  <!-- 下方手机密码 -->
  <view class="log_tow_input">
    <van-cell-group>
      <van-field
        value="{{ phone }}"
        clearable
        label="手机号"
        placeholder="请输入手机号"
        bind:change="onChangePhone"
        maxlength="11"
      />

      <van-field
        value="{{ password }}"
        type="password"
        label="密码"
        placeholder="请输入密码"
        border="{{ false }}"
        bind:change="onChangePassword"
        maxlength="6"
      />
    </van-cell-group>
  </view>
  <view class="denglu">
    <van-button block custom-style="font-size:32rpx;height:80rpx;background:#1678FF;color:white" bind:click="subInfo">提交</van-button>
  </view>
  <view class="outer-span">  
    <span bindtap="to_cliet">前往用户端>></span>
  </view>
</view>